{% extends 'layouts.admin_main' %}

{% block pagecss %}
	<!-- DataTables CSS -->
    <link href="{{ url('assets/plugins/datatables/dataTables.bootstrap.css') }}" rel="stylesheet">
{% endblock %}

{% block pagejs %}
	<!-- DataTables JavaScript -->
    <script src="{{ url('assets/plugins/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ url('assets/plugins/datatables/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ url('assets/plugins/datatables/extensions/Responsive/js/dataTables.responsive.js') }}"></script>
    <script src="{{ url('assets/js/task.index.js') }}"></script>
{% endblock %}

{% block title %}
	{{ project.name }}
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-lg-12">
			<div class="box">
				<!-- /.panel-heading -->
				<div class="box-body">
					<table width="100%" class="table table-striped table-bordered table-hover" id="datatables-tasks">
						<thead>
							<tr>
								<th>ID</th>
								<th>Name</th>
								<th>Status</th>
								<th>Assigned To</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							{% for task in project.tasks %}
								<tr class="odd gradeX">
									<td><a href="{{ url('task/edit/' ~ task.id) }}">{{ task.id }}</a></td>
									<td>{{ task.name }}</td>
									<td>{{ task.state.name }}</td>
									<td>{{ task.user.last_name }}, {{ task.user.first_name }}</td>
									<td><a href="{{ url('task/view/' ~ task.id) }}">View</a></td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<!-- /.table-responsive -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
{% endblock %}
